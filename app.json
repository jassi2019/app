{
  "expo": {
    "name": "Education App",
    "slug": "education-app",
    "version": "1.0.3",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      "./plugins/withRazorpayConfig"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.taiyarineetki.educationapp",
      "buildNumber": "1.0.3",
      "deploymentTarget": "15.1",
      "jsEngine": "hermes",
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access for user uploads and verification.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to attach images.",
        "NSMicrophoneUsageDescription": "This app requires microphone access for audio features.",
        "UIBackgroundModes": [
          "fetch"
        ],
        "LSApplicationQueriesSchemes": [
          "razorpay"
        ]
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.taiyarineetki.app",
      "versionCode": 2,
      "jsEngine": "hermes",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "blockedPermissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "extra": {
      "eas": {
        "projectId": "f2744d0e-f1ed-4511-96a2-3afc6a10cbe6"
      }
    }
  }
}